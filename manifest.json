{
  "description": "Erota videolinkit sivulta.",
  "manifest_version": 2,
  "name": "video-linkit-talteen",
  "version": "1.0",

  "applications": {
    "gecko": {
      "id": "addon@example.com",
      "strict_min_version": "42.0"
    }
  },

  "browser_action": {
    "browser_style": true,
    "default_popup": "popup/link_page.html",
    "default_icon": {
      "16": "icons/page-16.png",
      "32": "icons/page-32.png"
    }
  },

  "permissions": [
    "webRequest",
    "clipboardWrite",
    "tabs",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["background.js"]
  }
}
